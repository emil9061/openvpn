if [ -z "$EASYRSA_CALLER" ]; then
	echo "You appear to be sourcing an Easy-RSA 'vars' file." >&2
	echo "This is no longer necessary and is disallowed. See the section called" >&2
	echo "'How to use this file' near the top comments for more details." >&2
	return 1
fi

set_var EASYRSA_PKI							"{{ pki_dir }}"
set_var EASYRSA_BATCH           "yes"
set_var EASYRSA_CN              "{{ var_cn }}"

set_var EASYRSA_REQ_COUNTRY     "{{ var_country }}"
set_var EASYRSA_REQ_PROVINCE    "{{ var_province }}"
set_var EASYRSA_REQ_CITY        "{{ var_city }}"
set_var EASYRSA_REQ_ORG         "{{ var_org }}"
set_var EASYRSA_REQ_EMAIL       "{{ var_email }}"
set_var EASYRSA_REQ_OU          "{{ var_ou }}"
